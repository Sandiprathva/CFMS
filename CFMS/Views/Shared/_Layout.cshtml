                            <a class="nav-link text-muted" href="/Secretary/ReportDetalis/">Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-muted" href="/Company/CartShow/"><i class="fas fa-shopping-cart"></i><span class="badge badge-pill badge-warning" style="vertical-align: top;"> @Session["noti"]</span> </a>
                        </li>
                    }
                    if (Session["UTYPE"].ToString() == "Member")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-muted" href="/Secretary/MemDetail/">Submit Crop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-muted" href="/Secretary/GetMembarReq/">Requirement</a>
                        </li>

                    }


                }



            </ul>
            <ul class="nav navbar-nav ">
                @if (Session["UNAME"] != null)
                {
