                    {
                        <span class='navbar-text text-muted'>@Session["GNAME"].ToString() @Session["UTYPE"].ToString()<a href="@Url.Action("ProfileUser", "Home")"> <font color=Red> @Session["UNAME"].ToString()</font></a></span>

