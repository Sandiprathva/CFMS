                        <li class="nav-item">
                            <a class="nav-link text-muted" href="/Secretary/ReportDetalis/">Report</a>
                        </li>
                    }
                    if (Session["UTYPE"].ToString() == "Company" || Session["UTYPE"].ToString() == "NewGroup")
                    {
                        <li><a class=" nav-link text-muted" href="/Company/AddregItem/">Add Item</a></li>
                        <li class="nav-item">
                            <a class="nav-link text-muted" href="/Secretary/Show/">Show Item</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-muted" href="/Secretary/ShowSellingItem/">Buy Item</a>
                        </li>
