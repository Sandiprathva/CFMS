
@{
    ViewBag.Title = "Forgotpass";
}

<h2>Forgotpass</h2>

<div ng-app="ProUser" ng-controller="ProUserController">

    <div class="container col-md-7 offset-md-3">
        <div class="shadow p-4 mb-4 bg-white">
            <div class="card card-primary border-primary">
                <div class="card-header bg-primary text-white"> Forgot password <i class="fas fa-key"></i></div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Email:</label>
                        <input type="text" ng-model="email" name="name" class="form-control" required>
                  
                    </div>
                    <div class="form-group">
                        <button type="submit"  ng-click="SendEmail()" class="btn btn-success"><i class="fas fa-paper-plane"></i> Send</button>
                        <button type="submit" class="btn btn-danger"><i class="far fa-times-circle"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
