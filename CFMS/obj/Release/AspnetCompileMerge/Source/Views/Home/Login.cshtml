
@{
    ViewBag.Title = "Login";
}
    <div ng-app="UserLogin" ng-controller="UserLOG">
        <form name="login" novalidate> 
            <div class="container col-md-6 offset-md-3">
                <div class="shadow p-4 mb-4 bg-white">
                    <div class="card card-primary border-success">
                        <div class="card-header bg-success text-white">

                            <div class="float-left">Login</div>
                            <div class="float-right "><span> <i class="fas fa-key"></i></span><a href="/Home/Forgotpass/" class="text-white">Forgot password</a></div>
                        </div>


                        <div class="card-body">

                            <div class="form-group">

                                @*<div class="alert alert-danger alert-dismissible" ng-show="ms.fiel== true">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <strong>{{ms}} </strong>
                                </div>*@
                                <div ng-show="ms.fiel==true" class="text-center text-danger"><p>{{mss}}</p></div>
                            </div>
                            <div class="form-group">
                                <label for="name">Mobile Number:</label>
                                <input type="text" ng-model="Registration.monum" name="mo" class="form-control" required  maxlength="10">
                                <span ng-show="login.mo.$dirty && login.mo.$error.required" class="text-danger">Mobile Number is Required</span>
                            
                            </div>


                            <div class="form-group">
                                <label for="name">Password:</label>
                                <input type="password" ng-model="Registration.pass" class="form-control" name="pass"  required>
                                <span ng-show="login.pass.$dirty && login.pass.$error.required" class="text-danger">Password is Required</span>

                            </div>


                            <div class="form-group">
                                <div class="float-right "><a href="/Home/Registraionall/" class="text-info">New Sign Up?</a></div>

                            </div>

                            <div class="form-group col-md-6 offset-md-3">
                                <button type="submit" ng-click="Loginuser()" ng-disabled="login.$invalid" class="btn btn-success"><i class="fas fa-sign-in-alt"></i> Login</button>
                                <button type="submit" class="btn btn-danger"><i class="far fa-times-circle"></i>  Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>

