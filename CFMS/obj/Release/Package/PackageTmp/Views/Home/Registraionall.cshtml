
@{
    ViewBag.Title = "Registraionall";
}


<div class="loader"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script type="text/javascript">
    $(".btn").click(function () {
        $(".loader").fadeOut("slow");
    });
   
</script>


<div ng-app="RegApp" ng-controller="RegistrationController">
    <form name="RegFrom">


        <div class="container col-md-6 offset-md-3">
            <div class="shadow p-4 mb-4 bg-white">
                <div class="card card-primary border-primary">
                    <div class="card-header bg-primary text-white">Rregistration From</div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="alert alert-success alert-dismissible" ng-show="msk.add == true">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>Your Registration Successfully ... !</strong>
                            </div>
                            <div class="alert alert-danger alert-dismissible" ng-show="msk.fail == true">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>Your Registration Not Successfully ! Plase Trial Agin...</strong>
                            </div>
                        </div>
                        <div class="form-group">

                            <input type="radio" ng-init="Registration.rtype='NewGroup'" ng-model="Registration.rtype" name="rtype" value="NewGroup" ng-change='newValue(value)' required /><label>New Group</label>
                            <input type="radio" ng-model="Registration.rtype" name="rtype" value="Member" ng-change='newValue(value)' /><label>Member</label>
                            @*<input type="radio" ng-model="Registration.rtype" name="rtype" value="ProgressiveFarmer" ng-change='newValue(value)' /><label>Progressive Farmer/Scientist</label>*@
                            <input type="radio" ng-model="Registration.rtype" name="rtype" value="Company" ng-change='newValue(value)' /><label>Company</label>
                        </div>


                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" ng-model="Registration.name" placeholder="Enter Name" name="name" class="form-control" required pattern="^[A-Z]{1}[a-z ]{0,20}$">
                            @*<span ng-show="RegFrom.name.$dirty && RegFrom.name.$error.required" class="text-danger">Name is Required</span>*@
                            <span ng-show="RegFrom.name.$dirty && RegFrom.name.$error.pattern" class="text-danger">First letter should be capital...Only 20 characters are allowed...No special characters allowed</span>
                        </div>


                        <div class="form-group" ng-hide=" ms.Comp == true || ms.Mem == true">
                            <label for="Group Name">Group Name:</label>
                            <input type="text" ng-model="Registration.gname" class="form-control" placeholder="Enter Group Name" name="gname" required pattern="^[A-Z]{1}[a-z ]{0,20}$" ng-change="GroupNameExit()">
                            @*<span ng-show="RegFrom.gname.$dirty && RegFrom.gname.$error.required" class="text-danger">GroupName is Required</span>*@
                            <span ng-show="RegFrom.gname.$dirty && RegFrom.gname.$error.pattern" class="text-danger">First letter should be capital...Only 20 characters are allowed...No special characters allowed</span>
                            <span ng-show="Groupnm=='suc'" class="text-danger">Group Name is Alredy exit try other Name !</span>


                        </div>
                        @*<div class="form-group" ng-show="ms.ProFa == true">
                                <label for="Group Name">knowledge of Crop:</label>
                                <input type="text" ng-model="Registration.gname" class="form-control">
                            </div>*@
                        @*<div class="form-group" ng-show="ms.ProFa == true">
                                <label for="Group Name">Other :</label>
                                <input type="text" ng-model="Registration.gname" class="form-control">
                            </div>*@
                        <div class="form-group" ng-show="ms.Comp == true">
                            <label for="Group Name">Company Name:</label>
                            <input type="text" ng-model="Registration.gname" placeholder="Enter Company Name" name="cname" class="form-control" required pattern="^[A-Z]{1}[a-z ]{0,20}$" />
                            @*<span ng-show="RegFrom.cname.$dirty && RegFrom.cname.$error.required" class="text-danger">Company Name is Required</span>*@
                            <span ng-show="RegFrom.cname.$dirty && RegFrom.cname.$error.pattern" class="text-danger">First letter should be capital...Only 20 characters are allowed...No special characters allowed</span>

                        </div>
                        <div class="form-group" ng-show="ms.Mem == true">
                            <label for="Group Name">Group Name:</label>
                            <select class="custom-select" ng-model="Registration.gname">
            <option value="" selected>-- Select Group Name --</option>
            <option ng-repeat="st in Regg" [value]="{{st.rid}}">{{st.gname}}</option>
        </select>

                           

                           
                            @*<span ng-show="RegFrom.appgp.$dirty && RegFrom.appgp.$error.required">Select service</span>*@
                            @*<span ng-show="RegFrom.gname.$dirty && RegFrom.gname.$error.required" class="text-danger">Group Name required!</span>*@

                            @*<select ng-model="Registration.gname" name="gname" ng-options="b.rid as b.gname for b in Regg" class="custom-select">
            <option value="" selected>-- Select Group Name --</option>
        </select>*@
                        </div>

                        <div class="form-group">
                            <label for="Address">Address:</label>
                            <input type="text" ng-model="Registration.addr" placeholder="Enter Address" name="add" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail:</label>
                            <input type="text" ng-model="Registration.email" name="email" placeholder="Enter E-mail" class="form-control" ng-pattern="Ptemail" required ng-change="EmailExit()">
                            @*<span ng-show="RegFrom.email.$dirty && RegFrom.email.$error.required" class="text-danger">E-mail Id is Required</span>*@
                            <span ng-show="RegFrom.email.$dirty && RegFrom.email.$error.pattern" class="text-danger">E-mail Id is invalid try agin .</span>
                            <span ng-show="Exemail=='suc'" class="text-danger">E-mail is Alredy exit try other E-email Id !</span>


                        </div>
                        <div class="form-group">
                            <label for="Mo">Mobile Number:</label>
                            <input type="text" ng-model="Registration.monum" name="mo" placeholder="Enter Mobile Number" class="form-control" required pattern="^[6-9]\d{9}$" maxlength="10" ng-change="MonoExit()">
                            @*<span ng-show="RegFrom.mo.$dirty && RegFrom.mo.$error.required" class="text-danger">Mobile Number is Required</span>*@
                            <span ng-show="RegFrom.mo.$dirty && RegFrom.mo.$error.pattern" class="text-danger">Mobile Number is Not valid try agin .</span>
                            <span ng-show="Exmonum=='suc'" class="text-danger">Mobile Number is Alredy exit try other Mobile Number !</span>


                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input type="password" ng-model="Registration.pass" class="form-control" placeholder="Enter Password" id="pwd" name="pass" pattern="(?!^[0-9]*$)(?!^[a-zA-Z]*$)^([a-zA-Z0-9]{8,10})$" required>
                            @*<span ng-show="RegFrom.pass.$dirty && RegFrom.pass.$error.required" class="text-danger">Password is Required</span>*@
                            <span ng-show="RegFrom.pass.$dirty && RegFrom.pass.$error.pattern" class="text-danger">It must be between 8 to 10 characters having at least one digit or one alphabet. Please note no special characters are allowed .</span>
                        </div>

                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" name="cpass" ng-model="pss" placeholder="Enter Confirm Password" required class="form-control" />
                            <span class="text-danger" ng-show="RegFrom.cpass.$dirty && pss!=Registration.pass">
                                Passwords don't match.
                            </span>
                        </div>

                        <div class="form-group col align-self-center" align="center">
                            <button type="submit" ng-disabled="RegFrom.$invalid || pss!=Registration.pass || Groupnm=='suc' || Exmonum=='suc' || Exemail=='suc'" ng-click="savedata()" class="btn btn-success"><i class="far fa-check-circle"></i> Registration</button>
                            <button type="submit" class="btn btn-danger" ng-click="Registration=null;pss=null;Registration.rtype='NewGroup'"><i class="far fa-times-circle"></i> Cancel</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



